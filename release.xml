<?xml version='1.0'?>
<project name="polskaonline" default="all" basedir=".">
	<property file="build.ant-private.properties"/>
	<property file="build.ant.properties"/>

	<target name="temp" depends="init,jardiff,sign_diff-jars" />

	
	<target name="all" depends="init,prepare-archive,jardiff,sign_diff-jars">
		<!-- This file will automate some parts of the release process -->
		
		<!-- TODO
			* download http://arianne.sf.net/stendhal/updates/update.properties
			* add file-sizes
			* add new version for initial download
			* add update-path
			* upload to update folder (.jar-files before update.properties)
			* upload to webstart (pol-test.jnlp)
			* upload to filerelease
			*********************************************************
			* TEST
			*********************************************************
			* update server
			* do file release
			* rename pol-test.jnlp to pol.jnlp
			* update website
		-->
	</target>

	<!--* echo (from which version to which version the update will be created) -->
	<target name="init">
		<echo>Creating update from ${version.old} to ${version}</echo>
	</target>

	<!--
	* rm build-archive/*.jar
	
	* unzip build-archive/polskaonline-${version.old}.zip to build-archive
	-->
	<target name="prepare-archive">
		<delete>
			<fileset dir="${build-archive}">
			    <exclude name="*.zip"/>
			</fileset>
		</delete>
		<!-- TODO
		* unless build-archive/polskaonline-${version.old}.zip exists
			download http://polskaonline.org/jws/polskaonline-${version.old}.zip to build-archiv -->
		<unzip src="${build-archive}/polskaonline-${version.old}.zip" 
			dest="${build-archive}" />
	</target>

	<target name="jardiff">
		<java jar="libs/jardiff.jar" fork="true">
			<arg value="-nonminimal" />
			<arg value="-creatediff" />
			<arg value="-output" />
			<arg value="${build}/lib/polskaonline-diff-${version.old}-${version}.jar" />
			<arg value="${build-archive}/polskaonline-${version.old}.jar" />
			<arg value="${build}/lib/polskaonline-${version}.jar" />
		</java>
		<java jar="libs/jardiff.jar" fork="true">
			<arg value="-nonminimal" />
			<arg value="-creatediff" />
			<arg value="-output" />
			<arg value="${build}/lib/polskaonline-data-diff-${version.old}-${version}.jar" />
			<arg value="${build-archive}/lib/polskaonline-data-${version.old}.jar" />
			<arg value="${build}/lib/polskaonline-data-${version}.jar" />
		</java>
		<java jar="libs/jardiff.jar" fork="true">
			<arg value="-nonminimal" />
			<arg value="-creatediff" />
			<arg value="-output" />
			<arg value="${build}/lib/polskaonline-music-data-diff-${version.old}-${version}.jar" />
			<arg value="${build-archive}/lib/polskaonline-music-data-${version.old}.jar" />
			<arg value="${build}/lib/polskaonline-music-data-${version}.jar" />
		</java>
		<java jar="libs/jardiff.jar" fork="true">
			<arg value="-nonminimal" />
			<arg value="-creatediff" />
			<arg value="-output" />
			<arg value="${build}/lib/polskaonline-sound-data-diff-${version.old}-${version}.jar" />
			<arg value="${build-archive}/lib/polskaonline-sound-data-${version.old}.jar" />
			<arg value="${build}/lib/polskaonline-sound-data-${version}.jar" />
		</java>
		<!-- TODO maraurora.jar-->
	</target>

	<!-- * Sign the -diff-*.jar files for webstart -->
    <condition property="exclude.signing" value="true">
      <not>
       <available file="keystore.ks"/>
      </not>
    </condition>
	<target name="sign_diff-jars" depends="jardiff" unless="exclude.signing">
		<signjar alias="${keystore.alias}" keystore="keystore.ks" storepass="${keystore.password}">
			<fileset dir="${lib}">
				<include name="*-diff*.jar"/>
			</fileset>
		</signjar>
		<signjar alias="stendhal" keystore="keystore.ks" storepass="${keystore.password}">
			<fileset dir="${lib}">
				<include name="*-diff*.jar"/>
			</fileset>
		</signjar>
	</target>

	<target name="upload-diff">
		 <exec executable="scp" failonerror="true">
		    <arg value="${build}/lib/polskaonline-diff-${version.old}-${version}.jar"/>
		    <arg value="${build}/lib/polskaonline-data-diff-${version.old}-${version}.jar"/>
		    <arg value="${sf.username}@shell1.sf.net:${sf.homedir}/stendhal/stendhal/updates/"/>
		  </exec>
	</target>
	<target name="upload-prop">
		 <exec executable="scp" failonerror="true">
		    <arg value="/tmp/update.properties.xxx"/>
		    <arg value="${sf.username}@shell1.sf.net:${sf.homedir}/stendhal/stendhal/updates/"/>
		  </exec>
	</target>
	<target name="upload-filerelease">
		 <exec executable="scp" failonerror="true">
		    <arg value="${build}/polskaonline-${version}.zip"/>
		    <arg value="${build}/polskaonline-FULL-${version}.zip"/>
		    <arg value="${build}/polskaonline-server-${version}.zip"/>
		    <arg value="${build}/polskaonline-${version}-src.tar.gz"/>
		    <arg value="${sf.username}@shell1.sf.net:${sf.homedir}/stendhal/file-release/stendhal"/>
		  </exec>
	</target>
	<target name="upload" depends="upload-diff,upload-prop,upload-filerelease" />
</project>
